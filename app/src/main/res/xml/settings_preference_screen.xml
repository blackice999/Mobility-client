<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:key="@string/key_notifications_category"
        app:title="@string/notifications_preference_category_title">

        <SwitchPreferenceCompat
            app:key="@string/key_notifications"
            app:title="@string/notification_preference_title" />

        <Preference
            app:key="@string/key_list_ringtone"
            app:summary="@string/default_ringtone_preference"
            app:title="@string/ringtone_preference_title" />
    </PreferenceCategory>

    <PreferenceCategory
        app:key="@string/key_user_info_category"
        app:title="@string/user_info_preference_category_title">

        <EditTextPreference
            app:key="@string/key_delivery_address"
            app:title="@string/delivery_address_preference_title" />

        <EditTextPreference
            app:key="@string/key_phone_number"
            app:title="@string/phone_number_preference_title" />

        <Preference
            app:key="@string/key_login"
            app:title="@string/login_preference_title" />

    </PreferenceCategory>

    <PreferenceCategory
        app:key="@string/key_feedback_category"
        app:title="@string/feedback_preference_category_title">

        <Preference
            app:key="@string/key_feedback"
            app:title="@string/feedback_preference_title" />
    </PreferenceCategory>
</androidx.preference.PreferenceScreen>